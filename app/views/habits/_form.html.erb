<%= form_with model: habit, class: "space-y-6" do |form| %>
  <% if habit.errors.any? %>
    <div class="p-4 rounded-lg bg-red-500/10 border border-red-500/20">
      <div class="flex items-center gap-2 text-red-400 font-medium mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <%= t("errors.template.header", count: habit.errors.count, model: Habit.model_name.human.downcase) %>
      </div>
      <ul class="list-disc list-inside text-sm text-red-400/80">
        <% habit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t("habits.form.name_label"), class: "block text-sm font-medium text-subtle mb-2" %>
    <%= form.text_field :name, placeholder: t("habits.form.name_placeholder"), required: true, autofocus: true, class: "w-full px-4 py-2.5 bg-surface-1 border border-border rounded-lg text-white placeholder-muted focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-colors" %>
  </div>

  <div>
    <%= form.label :description, t("habits.form.description_label"), class: "block text-sm font-medium text-subtle mb-2" %>
    <%= form.text_area :description, placeholder: t("habits.form.description_placeholder"), rows: 3, class: "w-full px-4 py-2.5 bg-surface-1 border border-border rounded-lg text-white placeholder-muted focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-colors resize-none" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :frequency, t("habits.form.frequency_label"), class: "block text-sm font-medium text-subtle mb-2" %>
      <%= form.select :frequency, Habit.frequencies.keys.map { |f| [Habit.human_attribute_name("frequency.#{f}"), f] }, {}, class: "w-full px-4 py-2.5 bg-surface-1 border border-border rounded-lg text-white focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-colors" %>
    </div>

    <div>
      <%= form.label :color, t("habits.form.color_label"), class: "block text-sm font-medium text-subtle mb-2" %>
      <div class="flex items-center gap-3">
        <%= form.color_field :color, class: "w-12 h-10 rounded-lg border border-border cursor-pointer bg-transparent" %>
        <span class="text-sm text-muted"><%= habit.color %></span>
      </div>
    </div>
  </div>

  <div class="flex items-center gap-3 pt-4">
    <%= form.submit habit.persisted? ? t("habits.form.submit_update") : t("habits.form.submit_create"), class: "px-4 py-2.5 bg-accent hover:bg-accent-light text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
    <%= link_to t("habits.form.cancel"), habits_path, class: "px-4 py-2.5 text-subtle hover:text-white text-sm font-medium transition-colors" %>
  </div>
<% end %>
