<%= turbo_frame_tag dom_id(habit) do %>
  <% today = Date.current %>
  <% completion = habit.completion_for(today) %>

  <div class="flex items-center justify-between p-4 bg-white rounded-lg shadow border-l-4" style="border-left-color: <%= habit.color %>;">
    <div class="flex items-center gap-4">
      <div>
        <h3 class="font-semibold text-lg"><%= habit.name %></h3>
        <% if habit.description.present? %>
          <p class="text-gray-500 text-sm"><%= habit.description %></p>
        <% end %>
        <p class="text-gray-400 text-xs mt-1"><%= Habit.human_attribute_name("frequency.#{habit.frequency}") %></p>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <%= render "shared/check_in_buttons", habit: habit, date: today, completion: completion %>

      <%= link_to habit_path(habit), class: "text-gray-400 hover:text-gray-600 ml-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
      <% end %>
      <%= link_to edit_habit_path(habit), class: "text-gray-400 hover:text-gray-600" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
      <% end %>
    </div>
  </div>
<% end %>
