<div class="space-y-8">
  <div>
    <h1 class="text-2xl font-semibold tracking-tight"><%= t(".title") %></h1>
    <p class="text-subtle text-sm mt-1"><%= t(".subtitle") %></p>
  </div>

  <% if @habits.any? %>
    <section class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="bg-surface-1 border border-border rounded-xl p-6">
        <p class="text-subtle text-sm"><%= t(".total_habits") %></p>
        <p class="text-3xl font-semibold mt-1"><%= @total_habits %></p>
      </div>
      <div class="bg-surface-1 border border-border rounded-xl p-6">
        <p class="text-subtle text-sm"><%= t(".total_completions") %></p>
        <p class="text-3xl font-semibold mt-1 text-emerald-400"><%= @total_completions %></p>
      </div>
      <div class="bg-surface-1 border border-border rounded-xl p-6">
        <p class="text-subtle text-sm"><%= t(".best_streak") %></p>
        <p class="text-3xl font-semibold mt-1 text-orange-400">
          <%= @best_streak %>
          <span class="text-base font-normal text-muted"><%= t(".days") %></span>
        </p>
      </div>
    </section>

    <% active_streaks = @current_streaks.select { |s| s[:streak] > 0 } %>
    <% if active_streaks.any? %>
      <section>
        <h2 class="text-lg font-medium mb-4"><%= t(".top_streaks") %></h2>
        <div class="bg-surface-1 border border-border rounded-xl divide-y divide-border">
          <% active_streaks.each do |item| %>
            <div class="flex items-center justify-between p-4">
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 rounded-full" style="background-color: <%= item[:habit].color %>;"></div>
                <span><%= item[:habit].name %></span>
              </div>
              <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-sm font-medium bg-orange-500/10 text-orange-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                </svg>
                <%= item[:streak] %> <%= t(".days") %>
              </span>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <section>
      <h2 class="text-lg font-medium mb-4"><%= t(".habit_details") %></h2>
      <div class="bg-surface-1 border border-border rounded-xl overflow-hidden">
        <table class="w-full">
          <thead>
            <tr class="border-b border-border">
              <th class="px-4 py-3 text-left text-sm font-medium text-subtle">Habit</th>
              <th class="px-4 py-3 text-center text-sm font-medium text-subtle"><%= t(".current_streak") %></th>
              <th class="px-4 py-3 text-center text-sm font-medium text-subtle"><%= t(".longest_streak") %></th>
              <th class="px-4 py-3 text-center text-sm font-medium text-subtle"><%= t(".completion_rate") %></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @habits.each do |habit| %>
              <tr class="hover:bg-surface-2 transition-colors">
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 rounded-full" style="background-color: <%= habit.color %>;"></div>
                    <%= link_to habit.name, habit_path(habit), class: "hover:text-accent transition-colors" %>
                  </div>
                </td>
                <td class="px-4 py-3 text-center">
                  <% current = habit.current_streak %>
                  <span class="<%= current > 0 ? 'text-orange-400' : 'text-muted' %>">
                    <%= current %>
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-subtle">
                  <%= habit.longest_streak %>
                </td>
                <td class="px-4 py-3 text-center">
                  <% rate = habit.completion_rate %>
                  <span class="<%= rate >= 80 ? 'text-emerald-400' : rate >= 50 ? 'text-yellow-400' : 'text-red-400' %>">
                    <%= rate %>%
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  <% else %>
    <div class="text-center py-16 px-4">
      <p class="text-muted"><%= t(".no_habits") %></p>
    </div>
  <% end %>
</div>
