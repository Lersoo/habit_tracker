<div class="w-full max-w-sm">
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-accent/10 mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" viewBox="0 0 24 24" fill="currentColor">
        <path fill-rule="evenodd" d="M12.963 2.286a.75.75 0 00-1.071-.136 9.742 9.742 0 00-3.539 6.177A7.547 7.547 0 016.648 6.61a.75.75 0 00-1.152-.082A9 9 0 1015.68 4.534a7.46 7.46 0 01-2.717-2.248zM15.75 14.25a3.75 3.75 0 11-7.313-1.172c.628.465 1.35.81 2.133 1a5.99 5.99 0 011.925-3.545 3.75 3.75 0 013.255 3.717z" clip-rule="evenodd" />
      </svg>
    </div>
    <h1 class="text-2xl font-semibold tracking-tight"><%= t(".title") %></h1>
    <p class="text-subtle text-sm mt-1"><%= t(".subtitle") %></p>
  </div>

  <% if flash[:alert] %>
    <div class="mb-6 flex items-center gap-2 px-4 py-3 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 text-sm">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with model: @user, url: registration_path, class: "space-y-4" do |form| %>
    <% if @user.errors.any? %>
      <div class="p-4 rounded-lg bg-red-500/10 border border-red-500/20">
        <ul class="list-disc list-inside text-sm text-red-400">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: t(".email_placeholder"), class: "w-full px-4 py-2.5 bg-surface-1 border border-border rounded-lg text-white placeholder-muted focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-colors" %>
    </div>

    <div>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: t(".password_placeholder"), class: "w-full px-4 py-2.5 bg-surface-1 border border-border rounded-lg text-white placeholder-muted focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-colors" %>
    </div>

    <div>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: t(".password_confirmation_placeholder"), class: "w-full px-4 py-2.5 bg-surface-1 border border-border rounded-lg text-white placeholder-muted focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-colors" %>
    </div>

    <%= form.submit t(".submit"), class: "w-full px-4 py-2.5 bg-accent hover:bg-accent-light text-white font-medium rounded-lg transition-colors cursor-pointer" %>
  <% end %>

  <p class="mt-8 text-center text-sm text-muted">
    <%= t(".already_have_account") %>
    <%= link_to t(".sign_in"), new_session_path, class: "text-accent hover:text-accent-light transition-colors" %>
  </p>
</div>
