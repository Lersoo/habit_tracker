<% if completion&.completed? %>
  <div class="flex items-center gap-2">
    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium bg-emerald-500/10 text-emerald-400">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      <%= t("shared.check_in.completed") %>
    </span>
    <%= button_to habit_completions_path(habit, date: date), method: :delete, class: "text-xs text-muted hover:text-white transition-colors" do %>
      <%= t("shared.check_in.undo") %>
    <% end %>
  </div>
<% elsif completion&.skipped? %>
  <div class="flex items-center gap-2">
    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium bg-zinc-500/10 text-zinc-400">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
      <%= t("shared.check_in.skipped") %>
    </span>
    <%= button_to habit_completions_path(habit, date: date), method: :delete, class: "text-xs text-muted hover:text-white transition-colors" do %>
      <%= t("shared.check_in.undo") %>
    <% end %>
  </div>
<% else %>
  <div class="flex items-center gap-2">
    <%= button_to habit_completions_path(habit, date: date, status: :completed), class: "inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium bg-emerald-500 hover:bg-emerald-400 text-white transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      <%= t("shared.check_in.complete") %>
    <% end %>
    <%= button_to habit_completions_path(habit, date: date, status: :skipped), class: "inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-surface-3 hover:bg-zinc-700 text-subtle hover:text-white transition-colors" do %>
      <%= t("shared.check_in.skip") %>
    <% end %>
  </div>
<% end %>
